@model IEnumerable<Product>

@{ 
    Layout = "_AdminLayout";
}    

    <table class="table table-bordered table-striped">
        <tr>
            <th>ID:</th>
            <th>Name:</th>
            <th>Price:</th>
            <th>Description:</th>
            <th>Category:</th>
            <th>Picture:</th>
            <th>Actions:</th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductId</td>
                <td>@p.Name</td>
                <td>@p.Price.ToString("C1")</td>
                <td>@p.Description</td>
                <td>@p.Category</td>
                <td>
                    @if (p.Picture != null)
                    {
                        <img style='width:40px; height:40px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(p.Picture))" />
                    }
                    else
                    {
                        <img style='width:40px; height:40px;' src="https://i.pinimg.com/736x/7c/1c/a4/7c1ca448be31c489fb66214ea3ae6deb.jpg" />
                    }
                </td>
                <td>                   
                    <a asp-action="Edit" asp-route-productId="@p.ProductId" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-productId="@p.ProductId" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }

    </table>
    <div class="text-center m-3">
        <a asp-action="Create" class="btn btn-success">+ Add product</a>
    </div>
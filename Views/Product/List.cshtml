@model ProductListViewModel
<style>
    .column {
        flex: 0 1 33%;
        margin: 12px 0px;
        padding: 0 12px;
    }
</style>
<div class="d-flex">
    <div class="sidebar w-25">
        <div class="container">
            <div class="m-1">
                <form asp-action="Find" method="get">
                    <div class="d-flex">
                        <input class="form-control m-1" placeholder="Type name of product.." type="text" name="partOfName" value="" />
                        <button class="btn btn-primary m-1">Find</button>
                    </div>
                </form>
            </div>            
        </div>
    </div>
    <div class="content w-75">
        @if (Model.Products.Count() == 0)
        {
            <div class="text-center font-weight-bold">
                <p>There`re no products ;(</p>
            </div>

        }
    <div class="container">
        <div class="d-flex align-items-center m-1">
            <h3>Sort by:</h3>
            <div class="m-1">
                <a asp-action="List" asp-route-sortState="@ViewBag.SortByName" class="btn btn-outline-info">Name</a>
            </div>
            <div class="m-1">
                <a asp-action="List" asp-route-sortState="@ViewBag.SortByPrice" class="btn btn-outline-info">Price</a>
            </div>
        </div>
        <div class="d-flex flex-wrap">
            @foreach (var p in Model.Products)
            {
                <div class="column d-flex">
                    <div class="card d-flex flex-column">
                        @if (p.Picture != null)
                        {
                            <img class="card-img-top" style="height: 300px;" src="data:image/jpeg;base64,@(Convert.ToBase64String(p.Picture))" />
                        }
                        else
                        {
                            <img class="card-img-top" style="height: 300px;" src="https://i.pinimg.com/736x/7c/1c/a4/7c1ca448be31c489fb66214ea3ae6deb.jpg" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@p.Name</h5>
                            <p class="card-subtitle">@p.Category.Name</p>
                            <p class="card-text" style="flex: 1 1 auto;">@p.Description</p>
                            <p class="card-footer">
                                Price in UAH: ₴@p.Price <br />
                                Price in USD: @Decimal.Round(Model.CurrencyConverter.ConvertToUSD(p.Price), 2).ToString("C")
                            </p>

                            <a asp-action="Info" asp-route-productId="@p.ProductId" class="btn btn-primary">Show details -></a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center">
            @if (Model.PageViewModel.HasPreviousPage)
            {

                <a asp-action="List"
                   asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
                   class="btn btn-outline-dark">
                    Previous
                </a>

            }
            @if (Model.PageViewModel.HasNextPage)
            {

                <a asp-action="List"
                   asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
                   class="btn btn-outline-dark">
                    Next
                </a>
            }
        </div>
    </div>
    </div>
</div>
@model Product

    <div class="container m-1">
        <div class="d-flex">
            <div class="picture w-50 m-1">
                @if (Model.Picture != null)
                {
                    <img class="card-img-top" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Picture))" />
                }
                else
                {
                    <img class="card-img-top" src="https://i.pinimg.com/736x/7c/1c/a4/7c1ca448be31c489fb66214ea3ae6deb.jpg" />
                }
            </div>
            <div class="main w-50 m-1">
                <table class="table table-bordered table-striped">
                    <tr>
                        <td>Name:</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Category:</td>
                        <td>@Model.Category.Name</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>@Model.Description</td>  
                    </tr> 
                    <tr>
                        <td>Price:</td>
                        <td>₴@Model.Price</td>
                    </tr>
                </table>                         
            </div>
        </div>
        <div class="text-center">
            <a asp-action="List" class="btn btn-primary">Back to list</a>
        </div>       
    </div>
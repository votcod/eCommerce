<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>@ViewBag.Title - eCommerce</title>
    <style>
        li
        {
            margin-right: 20px;
        }
        li:last-child
        {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="bg-success text-center p-1 text-white">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="head-logo">
                    <h1>eCommerce</h1>
                </div>
                <div class="head-body" style="height: 80px;">
                    <ul class="d-flex align-items-center list-unstyled">
                        <li>@await Component.InvokeAsync(nameof(ExchengeRate))</li>
                        <li><a asp-controller="Admin" asp-action="List" 
                               class="btn btn-sm btn-primary">Admin panel</a></li>    
                    </ul>              
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>

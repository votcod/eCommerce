<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>@ViewBag.Title - eCommerce(Admin)</title>
</head>
<body>
    <div class="bg-success text-center p-1 text-white">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="head-logo">
                    <a asp-controller="Product" asp-action="List" class="text-white"><h1>eCommerce</h1></a>
                </div>
                <div class="head-body">
                    <a asp-controller="Product" asp-action="List" class="btn btn-sm btn-primary">Main page</a>
                    <a asp-controller="Category" asp-action="List" class="btn btn-sm btn-primary">Category Editor</a>
                    <a asp-controller="Admin" asp-action="List" class="btn btn-sm btn-primary">Product Editor</a>
                </div>
            </div>
        </div>
    </div>
    <div class="position-relative text-center text-info p-1 bg-light">
        @if (TempData["Message"] != null)
        {
            <span style="transform: translate3d(-50%,0,0);" class="alert alert-success text-center m-0 position-absolute">@TempData["Message"]</span>
        }
        <h2>Admin panel</h2>
    </div>
    <div>
        @RenderBody()
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>    
    <script>
        $(document).ready(function () {
            $('.alert').delay(3000).fadeOut(500);
            $('input.input-validation-error').css('border-color', 'red');            
            $('input').change(function () {
                let label = $(`span[data-valmsg-for='${$(this).attr('id')}']`);
                let picture = $(`div[id='${$(this).attr('id')}']`);
                if ($(this).val().length > 0) {
                    $(this).css('border-color', '#28a745');                  
                    label.css('display', 'none');
                    picture.css('visibility', 'visible');
                }                
                else {
                    $(this).css('border-color', 'red');                    
                    label.css('display', 'block');
                    picture.css('visibility', 'hidden');
                }
             }); 
        });
    </script>
</body>
</html>
